@page "{id}"
@model WebAppRazorPages.Pages.UserEditModel

@{
    ViewData["Title"] = "UserEdit";
}

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row">
        @Html.HiddenFor(x => x.CurrentUser.Id)
        <div class="col-md-offset-3 col-md-6">

            <div class="form-group">
                <label>Name</label>
                <input asp-for="CurrentUser.Name" value="@Model.CurrentUser.Name" class="form-control" />
                <span asp-validation-for="CurrentUser.Name"></span>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="CurrentUser.Email"  value="@Model.CurrentUser.Email" class="form-control" />
                <span asp-validation-for="CurrentUser.Email"></span>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="CurrentUser.Password" value="@Model.CurrentUser.Password" type="text" class="form-control" />
                <span asp-validation-for="CurrentUser.Password"></span>
            </div>

            <button type="submit" class="btn btn-default">Save</button>

        </div>
    </div>

</form>