@page "/"
@model WebAppRazorPages.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">

            <div class="form-group">
                <label>Name</label>
                <input asp-for="RegisterUser.Name" class="form-control"/>
                <span asp-validation-for="RegisterUser.Name"></span>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="RegisterUser.Email" class="form-control" />
                <span asp-validation-for="RegisterUser.Email"></span>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="RegisterUser.Password" class="form-control" />
                <span asp-validation-for="RegisterUser.Password"></span>
            </div>

            <button type="submit" class="btn btn-default">Send</button>

        </div>
    </div>

</form>

